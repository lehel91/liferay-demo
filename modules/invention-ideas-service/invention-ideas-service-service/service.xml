<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder package-path="hu.webtown.liferay.invention.ideas">
	<author>lehel</author>
	<namespace>le_demo</namespace>
	
	<entity local-service="true" name="InventionIdeaInstance" remote-service="true" uuid="true">

		<!-- PK fields -->
		<column name="id" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="name" type="String" />
		<column name="inventorName" type="String" />
		<column name="shortDescription" type="String" />
		<column name="description" type="String" />

		<!-- Order -->
		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->
		<finder name="Name" return-type="Collection">
			<finder-column name="name" />
		</finder>
		
		<finder name="InventorName" return-type="Collection">
			<finder-column name="inventorName" />
		</finder>
	</entity>
</service-builder>